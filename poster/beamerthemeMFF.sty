%It seems many of the following entries do not control any visible Behaviour. All such entries are
%set to red, so that they are easy to spot if they ever become visible

\setbeamercolor{headline}{fg=black,bg=white}
\setbeamercolor{separation line}{bg=MFF}
\setbeamercolor*{block title}{fg=white,bg=MFF}
\setbeamerfont{block title}{size=\large,series=\bf}

\setbeamercolor{title in headline}{fg=black}
\setbeamercolor{author in headline}{fg=figcolor}
\setbeamercolor{institute in headline}{fg=figcolor}

\setbeamercolor*{normal text}{fg=figcolor, bg=bgcolor}
\setbeamercolor*{block body}{fg=black, bg=white}
\setbeamertemplate{navigation symbols}{}

\newenvironment<>{myblock}[1]{%
	\begin{actionenv}#2%
	\def\insertblocktitle{\centering#1}%
	\par%
	\usebeamertemplate{block begin}\leftskip=3ex\rightskip=3ex\vspace{0.5ex}}
	{\par\vspace{1.5ex}\usebeamertemplate{block end}
	\end{actionenv}}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% !!! This environment can't both have nice margins AND display the contained text as justified:
% We preferentially use the above but keep this one just-in-case
\setbeamertemplate{block begin}{
	\vskip2ex
	\begin{beamercolorbox}[ht=3ex, dp=1.5ex, wd=\textwidth, center, rounded=false, shadow=false]{block title}%
		\usebeamerfont*{block title}\centering \insertblocktitle
	\end{beamercolorbox}%%
	\usebeamerfont{block body}%
	\begin{beamercolorbox}[rounded=false,shadow=false,center,wd=\textwidth,]{block body}%
		\ifbeamercolorempty[bg]{block body}\vbox{}%
		\begin{minipage}{\textwidth}\vbox{}%
			\justify
		}
		\setbeamertemplate{block end}{
		\end{minipage}
	\end{beamercolorbox}
}
