\setbeamertemplate{headline}{
	\leavevmode
	\begin{beamercolorbox}[wd=\paperwidth]{headline}
		\vspace{2ex}\\
		\begin{columns}
			\begin{column}{.05\paperwidth}
			\end{column}
			\begin{column}{.15\paperwidth}
				\begin{center}
					\includegraphics[width=.95\linewidth]{img/logo-en}
				\end{center}
			\end{column}
			\begin{column}{.6\paperwidth}
				\begin{center}
				\usebeamercolor{title in headline}{\color{fg}\textbf{\LARGE{\inserttitle}}\\[3ex]}
				\usebeamercolor{author in headline}{\color{fg}\large{\insertauthor}\\[1ex]}
				\usebeamercolor{institute in headline}{\color{fg}\large{\insertinstitute}}
				\end{center}
			\end{column}
			\begin{column}{.20\paperwidth}
			\end{column}
		\end{columns}
		\vspace{2ex}\\
	\end{beamercolorbox}

  \begin{beamercolorbox}[wd=\paperwidth]{lower separation line head}
	\rule{0pt}{10pt}
	\end{beamercolorbox}
	\vskip-1cm
	}

